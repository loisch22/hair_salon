@{
  Layout = "_Layout";
}

<body id="stylist-info">
  <h1 class="header">@Model.GetStylistName()</h1>

    <div class="container">
      <div class="well new-stylist">
        <p class="stylist"><strong>Name:</strong>
          <br>
          @Model.GetStylistName()
        </p>
        <p class="stylist"><strong>Years Experience:</strong>
          <br>
          @Model.GetStylistExperience()
        </p>
        <p class="stylist"><strong>Education:</strong>
          <br>
          @Model.GetStylistEdu()
        </p>
      </div>


      <a href="/view/all/clients/@Model.GetId()"><button type="button" class="btn btn-primary view-clients">View Clients</button></a>
      <a href="/add/client/@Model.GetId()"><button type="button" class="btn btn-success add-client">Add Client</button></a>
      <a href="/"><button type="button" class="btn btn-default exit">Exit</button></a>
    </div>
</body>
